<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid background color -->
<!--    <solid android:color="@color/white" /> &lt;!&ndash; Change this to your desired color &ndash;&gt;-->

    <!-- Rounded corners -->
    <corners
        android:radius="20dp" /> <!-- Adjust this value for more/less rounding -->
    <!-- You can also specify different radii for each corner -->
    <!--
    android:topLeftRadius="8dp"
    android:topRightRadius="8dp"
    android:bottomLeftRadius="4dp"
    android:bottomRightRadius="4dp"
    -->

    <!-- Optional: Add padding -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

    <!-- Optional: Add stroke/border -->
    <stroke
        android:width="6dp"
        android:color="#FFFFFF" /> <!-- Change border color/width as needed -->

</shape>